<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#32025C">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/back_btn"
        android:contentDescription="@string/back_button_desc"
        app:tint="#FFFFFF" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/special_offers_title"
        android:textColor="#FFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Nội dung ưu đãi ngập tràn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ví dụ về một ưu đãi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/primary"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/vouchersss"
                    android:contentDescription="@string/offer_image_desc" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Ưu đãi hấp dẫn : Đồng giá 45K/2D cho HSSV/GV/U22"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/primary"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/uudai"
                    android:contentDescription="@string/offer_image_desc" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Ưu đãi hấp dẫn : Áp dụng cho quý khách mua vé sau 22h "
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <Button
                android:id="@+id/booktk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Đặt vé"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/round_back_secondary_100"
                android:elevation="4dp"
                android:padding="12dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                />



            <!-- Thêm các ưu đãi khác tương tự -->
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
